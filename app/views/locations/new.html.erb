<h1> Locations visited </h1>

<h2> 
    <%= form_for @location do |f| %> 
        <% if @location.errors.any? %>
            <ul>
                <% @location.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        <% end %>
        <ul>
            <li>
                <%= f.label :illness %>
                <%= f.collection_select(:illness_id, @illnesses, :id, :name) %>
            </li>
            <br> 
            <li>
                <%= f.label :name %>
                <%= f.text_field :name %>
            </li>
            <br>
            <%= f.submit %>
        </ul>
    <% end %>
</h2>