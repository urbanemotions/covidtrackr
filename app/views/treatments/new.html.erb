<h1> Treatments </h1>
<h1>
<%= form_for @treatment do |f| %> 
    <% if @treatment.errors.any? %>
        <ul>
            <% @treatment.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>
    <% end %>
    <ul> 
        <li>
            <%= f.label :illness %>
            <%= f.collection_select(:illness_id, @illnesses, :id, :name) %>
        </li>
        <br>
        <li>
            <%= f.label :treatment %>
            <%= f.collection_select(:name, @treatments, :name, :name) %>
        </li>
        <br>
        <%= f.submit %>
    </ul>
<% end %>
</h1> 