<h1> Edit Illnesses </h1>

<h2>
    <%= form_for @illness do |f| %> 
        <% if @illness.errors.any? %>
            <ul>
                <% @illness.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        <% end %>
        <ul> 
            <li>
                <%= f.label :illness %>
                <%= f.text_field :name %>
            </li>
            <br>
            <%= f.submit %>
        </ul>
    <% end %>
</h2>