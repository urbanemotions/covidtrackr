<h1> Symptoms </h1>

<%= form_for @covidsymptom do |f| %> 
    <% if @covidsymptom.errors.any? %>
        <ul>
            <% @covidsymptom.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>
    <% end %>
    <ul> 
        <li>
            <%= f.label :user %>
            <%= f.collection_select :user_id, @users, :id, :name %>
        </li>
        <br>
        <li>
            <%= f.label :symptom %>
            <%= f.collection_select :symptom_id, @symptoms, :id, :covidsymptom %>
        </li>
        <br>
        <%= f.submit %>
    </ul>
<% end %>